@model IEnumerable<IPLManagementSystem.Models.Match>

@{
    ViewData["Title"] = "Matches";
}

<h1>Matches</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Match ID</th>
            <th>Match Date</th>
            <th>Venue</th>
            <th>Teams</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var match in Model)
        {
            <tr>
                <td>@match.MatchId</td>
                <td>@match.MatchDate.ToString("MM/dd/yyyy hh:mm tt")</td> <!-- Updated line -->
                <td>@match.Venue.Name</td>
                <td>@string.Join(" vs ", match.Teams.Select(t => t.TeamName))</td>
                <td>
                    <a asp-action="Details" asp-route-id="@match.MatchId">Details</a> |
                    <a asp-action="Edit" asp-route-id="@match.MatchId">Edit</a> |
                    <a asp-action="Delete" asp-route-id="@match.MatchId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>