@model IPLManagementSystem.DTOs.MatchDTO

@{
    ViewData["Title"] = "Edit Match";
}

<h2>Edit Match</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="MatchId" />

    <div class="form-group">
        <label asp-for="MatchDate" class="control-label"></label>
        <input asp-for="MatchDate" class="form-control" />
        <span asp-validation-for="MatchDate" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="VenueId" class="control-label"></label>
        <select asp-for="VenueId" asp-items="ViewBag.Venues" class="form-control">
            <option value="">-- Select Venue --</option>
        </select>
        <span asp-validation-for="VenueId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="TeamIds">Select Teams</label>
        <select asp-for="TeamIds" asp-items="ViewBag.Teams" class="form-control" multiple></select>
        <span asp-validation-for="TeamIds" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Save Changes</button>
</form>
