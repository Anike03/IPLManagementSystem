@model IPLManagementSystem.Models.Match

@{
    ViewData["Title"] = "Delete Match";
}

<h1>Delete Match</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Match</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Match ID</dt>
        <dd class="col-sm-10">@Model.MatchId</dd>

        <dt class="col-sm-2">Match Date</dt>
        <dd class="col-sm-10">@Model.MatchDate.ToShortDateString()</dd>

        <dt class="col-sm-2">Venue</dt>
        <dd class="col-sm-10">@Model.Venue.Name</dd>

        <dt class="col-sm-2">Teams</dt>
        <dd class="col-sm-10">
            @foreach (var team in Model.Teams)
            {
                <span>@team.TeamName</span>

                <br />
            }
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="MatchId" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>