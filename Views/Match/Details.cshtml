@model IPLManagementSystem.Models.Match

<h2>Match Details</h2>

<div>
    <h4>Match</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Match ID</dt>
        <dd class="col-sm-10">@Model.MatchId</dd>

        <dt class="col-sm-2">Match Date</dt>
        <dd class="col-sm-10">@Model.MatchDate.ToShortDateString()</dd>

        <dt class="col-sm-2">Venue</dt>
        <dd class="col-sm-10">@Model.Venue?.Name</dd>

        <dt class="col-sm-2">Teams</dt>
        <dd class="col-sm-10">
            @foreach (var team in Model.Teams)
            {
                <span>@team.TeamName</span>
            }
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.MatchId">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>