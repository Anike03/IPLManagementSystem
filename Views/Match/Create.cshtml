@model IPLManagementSystem.DTOs.MatchDTO

@{
    ViewData["Title"] = "Create Match";
}

<h1>Create Match</h1>

<form asp-action="Create">
    <div class="form-group">
        <label asp-for="MatchDate" class="control-label"></label>
        <input asp-for="MatchDate" class="form-control" />
        <span asp-validation-for="MatchDate" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="VenueId" class="control-label"></label>
        <select asp-for="VenueId" class="form-control" asp-items="ViewBag.Venues">
            <option value="">-- Select Venue --</option>
        </select>
        <span asp-validation-for="VenueId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="TeamIds" class="control-label"></label>
        <select asp-for="TeamIds" class="form-control" asp-items="ViewBag.Teams" multiple>
            <option value="">-- Select Teams --</option>
        </select>
        <span asp-validation-for="TeamIds" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Create" class="btn btn-primary" />
    </div>
</form>

<div>
    <a asp-action="Index">Back to List</a>
</div>