@model IEnumerable<IPLManagementSystem.Models.Player>

<h2>Players</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Player ID</th>
            <th>Name</th>
            <th>Age</th>
            <th>Role</th>
            <th>Team</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.PlayerId</td>
                <td>@item.Name</td>
                <td>@item.Age</td>
                <td>@item.Role</td>
                <td>@item.Team?.TeamName</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.PlayerId">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.PlayerId">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.PlayerId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>