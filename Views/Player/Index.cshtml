@model IEnumerable<IPLManagementSystem.Models.Player>

@{
    ViewData["Title"] = "Players";
}

<h1>Players</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>Player ID</th>
            <th>Name</th>
            <th>Age</th>
            <th>Role</th>
            <th>Team</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var player in Model)
        {
            <tr>
                <td>@player.PlayerId</td>
                <td>@player.Name</td>
                <td>@player.Age</td>
                <td>@player.Role</td>
                <td>@player.Team.TeamName</td>
                <td>
                    <a asp-action="Details" asp-route-id="@player.PlayerId">Details</a> |
                    <a asp-action="Edit" asp-route-id="@player.PlayerId">Edit</a> |
                    <a asp-action="Delete" asp-route-id="@player.PlayerId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>