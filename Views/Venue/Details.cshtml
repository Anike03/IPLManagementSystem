@model IPLManagementSystem.Models.Venue

<h2>Venue Details</h2>

<div>
    <h4>Venue</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Venue ID</dt>
        <dd class="col-sm-10">@Model.VenueId</dd>

        <dt class="col-sm-2">Name</dt>
        <dd class="col-sm-10">@Model.Name</dd>

        <dt class="col-sm-2">Location</dt>
        <dd class="col-sm-10">@Model.Location</dd>

        <dt class="col-sm-2">Matches</dt>
        <dd class="col-sm-10">
            @foreach (var match in Model.Matches)
            {
                <span>@match.MatchDate.ToShortDateString()</span>
            }
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.VenueId">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>