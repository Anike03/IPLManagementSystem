@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
    var user = await UserManager.GetUserAsync(User);
        <a class="btn btn-outline-light me-2" asp-area="Identity" asp-page="/Account/Manage/Index">
            <i class="fas fa-user"></i> @user?.UserName
        </a>
        <form class="d-inline" method="post" asp-area="Identity" asp-page="/Account/Logout">
            <button type="submit" class="btn btn-danger">
                <i class="fas fa-sign-out-alt"></i> Logout
            </button>
        </form>
}
else
{
        <a class="btn btn-outline-light me-2" asp-area="Identity" asp-page="/Account/Register">
            <i class="fas fa-user-plus"></i> Register
        </a>
        <a class="btn btn-light" asp-area="Identity" asp-page="/Account/Login">
            <i class="fas fa-sign-in-alt"></i> Login
        </a>
}
