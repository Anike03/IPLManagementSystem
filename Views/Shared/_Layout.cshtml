@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - IPL Management System</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" />
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600&display=swap" rel="stylesheet">

    <style>
        :root {
            --ipl-blue: #0d1a3f;
            --ipl-gold: #fdb927;
            --ipl-white: #ffffff;
        }

        .ipl-header {
            background-color: var(--ipl-blue);
            color: var(--ipl-white);
            padding: 15px;
            text-align: center;
            font-size: 2rem;
            font-weight: bold;
            text-transform: uppercase;
            font-family: 'Poppins', sans-serif;
        }

        .ipl-logo {
            height: 50px;
        }

        .navbar-custom {
            background-color: var(--ipl-blue) !important;
        }

        .navbar-nav .nav-item {
            margin: 0 10px;
        }

        .navbar-nav .nav-link {
            color: var(--ipl-white) !important;
            font-weight: 500;
            font-size: 1.1rem;
            padding: 10px 15px;
            transition: 0.3s;
        }

        .navbar-nav .nav-link:hover {
            color: var(--ipl-gold) !important;
        }

        /* Adjusting Login/Register buttons */
        .auth-buttons .btn {
            color: var(--ipl-white) !important;
            background-color: var(--ipl-blue) !important;
            font-weight: 500;
            padding: 8px 16px;
            border-radius: 20px;
            transition: 0.3s;
        }

        .auth-buttons .btn:hover {
            background-color: var(--ipl-gold) !important;
            color: var(--ipl-blue) !important;
        }

        /* Footer */
        .footer {
            background-color: var(--ipl-blue);
            color: var(--ipl-white);
            text-align: center;
            padding: 15px;
            font-size: 1rem;
        }
    </style>
</head>
<body>

    <!-- IPL Styled Header -->
    <div class="ipl-header">
        <img src="https://www.iplt20.com/assets/images/ipl-logo-new-old.png" alt="IPL Logo" class="ipl-logo">
        IPL Management System
    </div>

    <!-- Navigation Bar -->
    <nav class="navbar navbar-expand-lg navbar-dark navbar-custom">
        <div class="container">
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav">
                    @if (SignInManager.IsSignedIn(User))
                    {
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Venue" asp-action="Index">Venues</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Team" asp-action="Index">Teams</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Match" asp-action="Index">Matches</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Player" asp-action="Index">Players</a>
                        </li>
                    }
                </ul>

                <!-- Login/Register or Logout button (aligned to top-right) -->
                <div class="auth-buttons ms-auto">
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </div>
    </nav>

    <!-- Main Content -->
    <div class="container mt-4">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <!-- Footer -->
    <footer class="footer">
        &copy; 2025 - IPL Management System - <a asp-controller="Home" asp-action="Privacy" class="text-white">Privacy</a>
    </footer>

    <!-- Scripts -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)

</body>
</html>
